---
import Card from "../components/Card.astro";

let cards = [
  {
    href: "https://docs.astro.build/",
    title: "Documentation",
    body: "Learn how Astro works and explore the official API docs.",
  },
  {
    href: "https://astro.build/integrations/",
    title: "Integrations",
    body: "Supercharge your project with new frameworks and libraries.",
  },
  {
    href: "https://astro.build/themes/",
    title: "Themes",
    body: "Explore a galaxy of community-built starter themes.",
  },
];

// no-plusplus just to make sure eslint is running
for (let i = 0; i<1; i++) {
  continue
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <li>
      {
        cards.map((card) => (
          // next line has following error: Unsafe return of an `any` typed value. eslint(@typescript-eslint/no-unsafe-return)
          <Card title={card.title} href={card.href}>{card.body}</Card>
        ))
      }
    </li>
    <div class="tags">
      {
        ["a", "b", "c"].map((tag) => (
          <p class={tag}>
            "{tag}" This p tag triggers unsafe return of an `any` typed value.
          </p>
        ))
      }
    </div>
  </body>
</html>
